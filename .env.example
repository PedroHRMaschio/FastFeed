# Environment Variables Template
# Copy this file to .env and fill in your actual values

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_LIFETIME=3600

# ImageKit Configuration
IMAGEKIT_URL=https://ik.imagekit.io/your-imagekit-id
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_FILE_KEY=your-imagekit-private-key

# Database Configuration
# Use a file path for SQLite or connection string for PostgreSQL
# DATABASE_URL=sqlite+aiosqlite:///./fastfeed.db
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fastfeed

# Frontend Configuration
BACKEND_URL=http://localhost:8000
